<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <%- include('./partials/head.ejs')  %>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    </head>
    <body class="indexPage">
        <h1 class="header">Class Tracker</h1>
        <div>
            <main id="mainSite">
                <div class="container">
                    <div class="box-nav d-flex-justify-between">
                    <a href="/class_tracker/new" class="border-shadow" id="anchor">
                        <span class="text-gradient">Add a new student<i class="fas fa-user"></i></span>
                    </a>
                </div>
                <% trackers.forEach(trackers=> { %>
                <form action="/" method="POST" class="forms">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th>Name</th>
                                <th>Interesting Fact</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <a href="/class_tracker/show/id<%= trackers._id %>">
                                    <h1><%= trackers.Name %></h1>
                                </a>
                            </td>
                                <td><%= trackers.Fact%></td>
                                <td class="actions">
                                    <a href="/class_tracker/edit<%= trackers._id %>" class="btn borderder-shadow update">
                                        <span class="text-gradient"><i class="fa-solid fa-user-pen"></i></span>
                                    </a>
                                    <a href="/class_tracker/<%=trackers._id %>" class="btn borderder-shadow update">
                                        <span class="text-gradient"><i class="fa-solid fa-trash"></i></span>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </form>
                <% }) %>
            </div>
        </div>
    </main>
    </body>
</html>