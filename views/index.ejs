<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <%- include('./partials/head.ejs')  %>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    </head>
    <body class="indexPage">
        <header id="header">
            <nav>
                <div class="container">
                    <div class ="text-center">
                        <h1 class="header">Class Tracker</h1>
                    </div>
                    </div>
                    </nav>
                    </header>
<!-- end of header section -->

<!-- main site -->
            <main id="site-main">
                <div class="container">
                    <div class="box-nav d-flex justify-between">
                        <!-- id="anchor" add below at end -->
                    <a href="/class_tracker/new" class="border-shadow" id="anchor">
                        <span class="text-gradient">Add a new student <i class="fas fa-user"></i></span>
                    </a>
                </div>

                <!-- form handling -->
                
                    <!-- put below at end class="forms" -->
                <form action="/" method="POST">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th>Name</th>
                                <th>Interesting Fact</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% trackers.forEach(trackers=> { %>
                            <tr>
                                <td>
                                    <a href="/class_tracker/show/<%= trackers._id %>" class="studentName">
                                    <h1><%= trackers.Name %></h1>
                                    </a>
                                </td>
                                <td><%= trackers.Fact%></td>
                                <td class="actions">
                                    <a href="/class_tracker/edit/<%= trackers._id %>" class="btn border-shadow update">
                                    <span class="text-gradient"><i class="fa-solid fa-user-pen"></i></span>
                                    </a>
                                    <form action="/class_tracker/tracker/<%= trackers._id %>?_method=DELETE" method="POST">
                                    <!-- <input type="submit" class="btn borderder-shadow update"> -->
                                    <button type="submit" class="text-gradient"><i class="fa-solid fa-trash"></i> </button> 
                                </form>   
                               
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </form>
            </div>
        </div>
    </main>
    </body>
</html>